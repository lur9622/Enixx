@import url(//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css);

@font-face {
  font-family: MyriadPro;
  src: url(../fonts/MyriadWebPro.ttf);
}
body {
  font-family: MyriadPro;
}
.modal-dialog {
  width: 80vw;
}
.modal-content {
  border-radius: 0 !important;
  box-shadow: none !important;
}
.modal-body {
  padding-top: 71px;
  padding-bottom: 38px;
}
.modal_close_btn {
  position: absolute;
  padding: 0;
  top: 28px;
  right: 17px;
}
span {
  color: #333333;
}
.modal_title_small {
  text-transform: uppercase;
  font-size: 30px;
  font-weight: bold;
  line-height: 10px;
}
.modal_title_big {
  text-transform: uppercase;
  font-size: 48px;
  font-weight: bold;
  line-height: 30px;
}
.modal_description {
  font-size: 14px;
}
.login input {
  background-image: url('../img/email.png');
  background-repeat: no-repeat;
  background-position: 22px 18px;
  margin-top: 30px;
  padding-left: 66px;
  height: 56px;
  width: 100%;
  font-size: 18px;
}
.password input{
  background-image: url('../img/password.png');
  background-repeat: no-repeat;
  background-position: 22px 18px;
  margin-top: 10px;
  padding-left: 66px;
  height: 56px;
  width: 100%;
  font-size: 18px;
}
.form-control {
  border: solid 1px #333333;
  border-radius: 0;
}
.btn_login {
  color: #ffffff;
  background-color: #f8bd03;
  text-align: center;
  border-radius: 0;
  padding: 28px 0;
  font-size: 18px;
  text-transform: uppercase;
  margin-top: 30px;
  width: 66%;
}
.btn_register {
  color: #ffffff;
  background-color: #afcb24;
  text-align: center;
  border-radius: 0;
  padding: 28px 0;
  font-size: 18px;
  text-transform: uppercase;
  margin-top: 30px;
  width: 100%;
}
.forgot_password {
  text-transform: uppercase;
  font-size: 14px;
}
.title_container {
  word-wrap: break-word;
}
.modal_checkbox {
  padding: 0;
  margin-top: 30px;
  height: 50px;
  line-height: 15px;
}
.modal_checkbox > label {
  font-weight: 300;
}
.modal_checkbox > input[type="checkbox"] {
  display: none;
}
.modal_checkbox > input[type="checkbox"] + label span {
  display: inline-block;
  width: 46px;
  height: 46px;
  margin: 0 20px 0 0;
  vertical-align: middle;
  border: 1px solid #000000;
  background: none;
  cursor: pointer;
}
.modal_checkbox > input[type="checkbox"]:checked + label span {
  background: #000000;
}
.center_text_checkbox {
  display:flex;
  align-items:center;
  height:46px;
}